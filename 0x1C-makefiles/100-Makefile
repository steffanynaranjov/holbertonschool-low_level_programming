CFLAGS=-Wall -Werror -Wextra -pedantic
SRC=holberton.c main.c
OBJ=$(SRC:.c=.o)
NAME=holberton
CC=gcc

.PHONY: all clean oclean fclean re

%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $^ -o $@

all: $(NAME)

oclean:
	$(RM) $(OBJ)

clean:
	$(RM) *~ $(NAME)

fclean: clean oclean

re: oclean all
